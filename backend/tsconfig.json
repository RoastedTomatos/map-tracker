{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",

        "rootDir": "./src",
        "outDir": "./dist",

        "types": ["node"],

        "sourceMap": true,

        "strict": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "skipLibCheck": true
